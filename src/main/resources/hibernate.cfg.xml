<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Specify a Dialect for the Database -->
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Specify a Driver for the Database Connector -->
        <property name = "hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

        <!-- Update all Tables of the specified Database and create non-existent ones or alter if needed -->
        <property name="hbm2ddl.auto">update</property>

        <!-- Show all SQL-Statements translated from HQL to Database SQL Syntax by Hibernate -->
        <property name="show_sql">true</property>


        <!-- URL to Database Server -->
        <property name = "hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/hibernatetesting</property>

        <!-- Username of Database -->
        <property name = "hibernate.connection.username">root</property>

        <!-- Password of Database -->
        <property name = "hibernate.connection.password">admin</property>
    </session-factory>
</hibernate-configuration>